{
    "compilerOptions": {
      /* Language and Environment */
      "target": "ES2020",                                /* Definindo a versão do JavaScript para 2020 */
      
      /* Modules */
      "module": "NodeNext",                              /* Usando NodeNext para garantir compatibilidade com 'import.meta' */
      "moduleResolution": "Node",                        /* Usando a resolução de módulos padrão do Node.js */
      "esModuleInterop": true,                           /* Habilita a interoperabilidade entre ES Modules e CommonJS */
      
      /* Type Checking */
      "strict": true,                                    /* Habilita todas as opções de checagem estrita */
      "skipLibCheck": true,                              /* Ignora a verificação de tipos nos arquivos .d.ts */
      "resolveJsonModule": true,                         /* Habilita a importação de arquivos JSON */
      "experimentalDecorators": true,                     /* Permite o uso de decoradores experimentais */
      "emitDecoratorMetadata": true,                      /* Habilita a emissão de metadados para decoradores */
      
      /* Output */
      "outDir": "dist",                                  /* Diretório de saída para os arquivos compilados */
      
      /* Include and Exclude */
      "include": ["src/**/*.ts"],                         /* Incluir todos os arquivos .ts na pasta src */
      "exclude": [
        "node_modules",                                   /* Exclui a pasta node_modules */
        "**/*.spec.ts"                                    /* Exclui arquivos de teste */
      ]
    }
  }
  